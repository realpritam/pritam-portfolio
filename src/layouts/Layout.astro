---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import "../styles/globals.css";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;1,500&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-br from-black to-[#303030] text-white font-sans flex flex-row justify-center min-h-screen md:p-0">
		<div class="w-full md:w-[800px]">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	html, body, div, p {
		font-family: 'Roboto', sans-serif;
	}
</style>
